#!/usr/bin/env sh

set -e -x

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}

cp -a bosh_virtualbox_cpi/* ${BOSH_INSTALL_TARGET}

export BUNDLE_CACHE_PATH="vendor/package"
export BUNDLE_WITHOUT="development:test"
bundle_cmd="$BOSH_PACKAGES_DIR/ruby_virtualbox_cpi/bin/bundle"

cd ${BOSH_INSTALL_TARGET}

$bundle_cmd install --local --no-prune --deployment
